Xversion: '2'
services:
  app:
    container_name: app
    restart: always
    build: .
    ports:
      - '3000:3000'
    depends_on:
      - mongo
    volumes:
      - .:/usr/src/app
      - /usr/src/app/node_modules
  mongo:
    container_name: mongo
    image: mongo
    volumes:
      - data:/data/db
    expose:
      - '27017'

